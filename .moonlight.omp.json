{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "\uE0B0",
          "background": "blue",
          "foreground": "black",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "unique"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "leading_diamond": "\uE0D7",
          "trailing_diamond": "\uE0B0",
          "background": "green",
          "foreground": "black",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}yellow{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}lightYellow{{ end }}",
            "{{ if gt .Ahead 0 }}magenta{{ end }}",
            "{{ if gt .Behind 0 }}lightMagenta{{ end }}"
          ],
          "templates": [
            " {{ .HEAD }}",
            "{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}",
            "{{ if .Working.Changed }} \uF448 {{ .Working.String }} {{ end }}",
            "{{ if and (.Staging.Changed) (.Working.Changed) }}|{{ end }}",
            "{{ if .Staging.Changed }} ✔ {{ .Staging.String }} {{ end }}",
            "{{ if gt .StashCount 0 }} \udb80\udd20{{ .StashCount }} {{ end }}"
          ],
          "properties": {
            "fetch_status": true,
            "branch_icon": "",
            "no_commits_icon": "\udb80\udc95"
          }
        },
        {
          "type": "text",
          "style": "diamond",
          "leading_diamond": "\uE0D7",
          "trailing_diamond": "\uE0B0",
          "background_templates": [
            "{{if gt .Code 0}}red{{end}}",
            "{{if eq .Code 0}}black{{end}}"
          ],
          "foreground_templates": [
            "{{if gt .Code 0}}black{{end}}",
            "{{if eq .Code 0}}green{{end}}"
          ],
          "templates": [
            "{{if gt .Code 0}} ✘ {{ reason .Code }} {{end}}",
            "{{if eq .Code 0}} ✔ {{end}}"
          ]
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "type": "node",
          "style": "diamond",
          "leading_diamond": "\uE0B2",
          "trailing_diamond": "\uE0D6",
          "background": "magenta",
          "foreground": "black",
          "template": " \uE718 {{ .Full }} ",
          "properties": {
            "fetch_version": true
          }
        },
        {
          "type": "npm",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "background": "magenta",
          "foreground": "black",
          "template": "npm {{ .Full }} "
        }
      ]
    }
  ]
}
